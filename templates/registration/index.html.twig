{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/contact_styles.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/contact_responsive.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/registration.css') }}">
{% endblock %}



{% block body %}
    <div class="super_container">
        <div id="background-regist">
            {% include 'registration/background.html.twig' %}
        </div>

        <p>{{ 'symfony is great' | trans }}  </p>
        <p>{% trans %}symfony is great{% endtrans %}</p>


        <div class="form-group">
            {{ form_start(form) }}

            <div class="row">
                <div class="col">
                    <h2 id="info_schoolBoy_regist">Information sur l'élève</h2>
                    {{ form_widget(form.schoolBoy.lastName,{ 'attr': {'placeholder': "lastName"} }) }}
                    <span class="error">{{ form_errors(form.schoolBoy.lastName) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.firstName) }}
                    <span class="error">{{ form_errors(form.schoolBoy.firstName) }}</span>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    {{ form_label(form.schoolBoy.birthDate) }}
                    {{ form_widget(form.schoolBoy.birthDate) }}
                </div>
                <div class="col">
                    {{ form_widget(form.schoolBoy.birthplace) }}
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3 ">
                        <div class="input-group-prepend classes_label_regist">
                            {{ form_label(form.schoolBoy.classes, null, {
                                'label': 'Classe/Niveau',
                                'label_attr': {'id': 'input-group-text'}
                            }) }}
                        </div>
                        {{ form_widget(form.schoolBoy.classes, {'attr': {'class': 'custom-select'}}) }}
                    </div>
                </div>
                <div class="col matter_regist">
                    {{ form_label(form.matter,null, {'label':'Matter'}) }}
                    <div class="matter_input_regist">
                        {{ form_widget(form.matter) }}
                    </div>
                </div>
            </div>

            <h2>Informations sur les parents</h2>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.lastName,{ 'attr': {'placeholder': "Name of the father"} }) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.lastName) }}</span>
                </div>
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.firstName,{ 'attr': {'placeholder': "Prénom du père (tuteur)"} }) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.firstName) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.phone) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.phone) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.mother.lastName,{ 'attr': {'placeholder': "Nom de la mère (tutrice)"} }) }}
                    <span class="error">{{ form_errors(form.schoolBoy.mother.lastName) }}</span>
                </div>
                <div class="col">
                    {{ form_widget(form.schoolBoy.mother.firstName,{ 'attr': {'placeholder': "Prénom de la mère (tutrice)"} }) }}
                    <span class="error">{{ form_errors(form.schoolBoy.mother.firstName) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.mother.phone) }}
                    <span class="error">{{ form_errors(form.schoolBoy.mother.phone) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.email) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.email) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.address.address1) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.address.address1) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.address.address2) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.address.address2) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.address.postalCode) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.address.postalCode) }}</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.schoolBoy.father.address.city) }}
                    <span class="error">{{ form_errors(form.schoolBoy.father.address.city) }}</span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block">S'inscrire</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
