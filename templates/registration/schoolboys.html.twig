<div class="school_boy_collection" data-prototype="{{ form_widget(form.schoolBoys.vars.prototype)|e('html_attr') }}">
    <h2>Information sur l'élève</h2>

    {% for schoolBoy in form.schoolBoys %}
        {{ form_row(schoolBoy.lastName) }}
        {{ form_row(schoolBoy.firstName) }}
        {{ form_row(schoolBoy.birthplace) }}
        {{ form_row(schoolBoy.birthDate) }}
        {{ form_row(schoolBoy.classes) }}
    {% endfor %}
</div>